<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/rl_reporter_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_reporter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/reporter_name"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_reporter_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:hint="@string/reporter_name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_reporter_name_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_reporter_name"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_home_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/home_name"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_home_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:hint="@string/home_name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_home_name_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_home_name"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_street"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/street"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:hint="@string/street"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_street_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_street"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_ward"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_ward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="@string/ward"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_ward"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edittext_background_corner"
                        android:hint="@string/ward"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyae"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_ward_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_ward"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red54"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_district"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/district"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_district"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edittext_background_corner"
                        android:hint="@string/district"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyae"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_district_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_district"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red54"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/city"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:hint="@string/city"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_city_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_city"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_furniture_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_furniture_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/furniture_type"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_furniture_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:hint="@string/furniture_type"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_furniture_type_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_furniture_type"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_house_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_house_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/house_type"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_house_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:hint="@string/house_type"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_house_type_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_house_type"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/price"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_price"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edittext_background_corner"
                        android:hint="@string/price"
                        android:inputType="number"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyae"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_price_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_price"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red54"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_no_room"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_no_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/no_room"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_no_room"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edittext_background_corner"
                        android:hint="@string/no_room"
                        android:inputType="number"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greyae"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_no_room_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_no_room"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red54"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_description"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_130sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/notes"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edittext_background_corner"
                    android:gravity="top|start"
                    android:hint="@string/notes"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="8"
                    android:minLines="4"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/greyae"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_description_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_description"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red54"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cv_login"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/background_button_radius"
                android:enabled="false"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>